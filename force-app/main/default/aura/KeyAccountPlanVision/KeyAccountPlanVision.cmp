<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId">
    <lightning:recordEditForm aura:id="recordEditForm" recordId="{!v.recordId}" objectApiName="Account">
        <lightning:messages />
        <lightning:card title="Client's organisational objectives">
                <lightning:inputField fieldName="Key_Client_Org_Objectives_Summary__c"/>
                <lightning:inputField fieldName="Key_Client_Org_Objectives_Help__c"/>
        </lightning:card>
        <lightning:card title="Client's operational objectives">
                <lightning:inputField fieldName="Key_Client_Op_Objectives_Summary__c"/>
                <lightning:inputField fieldName="Key_Client_Op_Objectives_Help__c"/>
        </lightning:card>
        <lightning:card title="BSI's vision for this account">
                <lightning:inputField fieldName="Key_BSI_Vision_Summary__c"/>
                <lightning:inputField fieldName="Key_BSI_Vision_Help__c"/>
        </lightning:card>
        <lightning:button class="slds-m-top_small" type="reset" label="Cancel" />
        <lightning:button class="slds-m-top_small" type="submit" label="Save" />
    </lightning:recordEditForm>
</aura:component>